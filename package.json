{
  "name": "howler",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "serve": "node ./build/src/server.js",
    "build-ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "set DEBUG=express:* & nodemon ./build/src/server.js",
    "test": "mocha --require ts-node/register test/**/*.ts --exit",
    "heroku-postbuild": "yarn build-ts && cd client && yarn --production=false && yarn run build"
  },
  "dependencies": {
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.4.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mongoose": "^5.3.7",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.6",
    "@types/chai-http": "^3.0.5",
    "@types/connect-flash": "^0.0.34",
    "@types/connect-redis": "^0.0.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.20",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.15",
    "@types/passport": "^0.4.6",
    "@types/passport-local": "^1.0.33",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "concurrently": "^4.0.1",
    "mocha": "^5.2.0",
    "sinon": "^7.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0"
  }
}
